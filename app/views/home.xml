<Alloy>
	<Window title="Home" id="win" onFocus="init" navBarHidden="true">
		
		<View id="loadingScreen" backgroundColor="#000000">
			<View layout="vertical" height="Ti.UI.SIZE">
				<ImageView image="/images/poimen-mobile.png"></ImageView>
				<View height="15"></View>
				<Button id="bDonate" title="Donate" onClick="onDonateClick" width="120" height="37" color="#FFFFFF" backgroundImage="/images/orangeButtonBackground.png"></Button>
			</View>
			
		</View>
		
		<WebView id="web" visible="false"></WebView>
		<Label id="errorLabel" visible="false">Please check your internet connection.</Label>
		<View id="tryAgain" visible="false" onClick="tryAgain">
			<Label id="tryAgainLabel">Try again!</Label>
		</View>
		<ActivityIndicator id="hang" message="Hang in there!"></ActivityIndicator>
	</Window>
</Alloy>
